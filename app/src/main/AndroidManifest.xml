<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jere.wanandroid_learning_kotlin">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".utils.MyApp"
        android:allowBackup="true"
        android:icon="@drawable/wanand_kotlin_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/wanand_kotlin_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.mycollection.MyCollectionActivity" />
        <activity android:name=".view.login.LoginActivity" />
        <activity android:name=".view.knowledgesystem.KnowledgeSystemArticleListActivity" />
        <activity android:name=".view.ArticleDetailWebViewActivity" />
        <activity android:name=".view.aboutme.AboutMeActivity" />
        <activity
            android:name=".view.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".view.me.PersonalInfoActivity" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.jere.wanandroid_learning_kotlin.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_path" />
        </provider>

    </application>

</manifest>